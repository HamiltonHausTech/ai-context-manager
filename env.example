# AI Context Manager Environment Variables
# Copy this file to .env and configure your settings

# OpenAI Configuration (required for OpenAI summarizer)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (optional, defaults are shown)
# Use these when you're on your local network with Ollama running
OLLAMA_HOST=http://192.168.0.156:11434  # Your local network Ollama
# OLLAMA_HOST=http://localhost:11434     # Local Ollama on same machine
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=30
# OLLAMA_HEALTH_CHECK_TIMEOUT=5  # Timeout for health checks

# Database Configuration (optional)
SQLITE_DB_PATH=feedback.db

# Vector Database Configuration (optional)
# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# PostgreSQL + pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_context
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_TABLE_NAME=agent_memory
POSTGRES_EMBEDDING_DIM=384
POSTGRES_MAX_CONNECTIONS=20

# Logging Configuration (optional)
LOG_LEVEL=INFO
